<h1>followers</h1>
<% @follower_users.each do |user| %>
   <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag current_user.avatar, :size => "100x70"  %>
      <h1>
        <h5>Name : <%= link_to @user.name,  followers_user_path(@user) %></h5>
        <h5>Country : <%= @user.country %></h5>
        <h5>Profile : <%= @user.profile %></h5>
      </h1>
    </section>
  </aside>
<% end %>